{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "jsx": "react",
        "outDir": "./build",
        "declaration": true,
        "alwaysStrict": true,
        "watch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": [
        "bin/**/*",
        "lib/**/*",
        "src/**/*",
        "dummy.ts",
        "json.d.ts"
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
}