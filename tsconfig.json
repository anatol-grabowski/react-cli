{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "jsx": "react",
        "alwaysStrict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "build",
        "removeComments": true,
    },
    "include": [
        "bin/**/*",
        "lib/**/*",
    ],
    "exclude": [
        "build",
        "node_modules",
        "templates"
    ],
}