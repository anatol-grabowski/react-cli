{
    "compilerOptions": {
        "target": "esnext",
        "module": "es6",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "jsx": "react",
        "declaration": true,
        "alwaysStrict": true,
        "watch": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "include": [
        "lib/**/*",
    ],
    "exclude": [
        "build",
        "node_modules"
    ],
}